<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_iconapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash"
            android:theme="@style/AppTheme.NoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register"
            android:parentActivityName=".login" />
        <activity
            android:name=".login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".editnote"
            android:theme="@style/AppTheme.NoActionbar"
            android:parentActivityName=".notedetails"/>
        <activity
            android:name=".addnote"
            android:label="@string/title_activity_addnote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".notedetails"
            android:label="@string/title_activity_notedetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionbar">

        </activity>
    </application>

</manifest>